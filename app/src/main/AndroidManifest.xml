<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sherlyeka.reminderapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_reminder_dua"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_reminder_dua_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ReminderApp">

        <activity android:name=".TomorrowActivity" />
        <activity android:name=".YesterdayActivity" />
        <activity android:name=".TodayActivity" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>